<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:background="@color/background"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"

        android:background="@drawable/cerclebackground"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/Titlehome"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background">

        <ImageView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/yamaha"
            android:background="@color/background"
            android:id="@+id/companylogo"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"


           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yamaha"
            android:background="@color/background"
            android:textStyle="bold"
            android:textSize="26dp"
            android:id="@+id/nameofshop"
            android:textColor="@color/Titlehome"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/first"

            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:id="@+id/call"
                android:background="@drawable/baseline_local_phone_white_24dp"
                android:textSize="18sp"
                android:textColor="@color/Titlehome"/>

        </LinearLayout>
        <LinearLayout
            android:background="@color/second"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                android:id="@+id/location"
                android:textSize="18sp"
                 android:background="@drawable/baseline_location_on_white_24dp"
                android:textColor="@color/Titlehome"/>

        </LinearLayout>
        <LinearLayout
            android:background="@color/third"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/web"
                android:text="50"
                android:textSize="18sp"
                android:background="@drawable/direction"
                android:textColor="@color/Titlehome"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>